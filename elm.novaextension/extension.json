{
  "identifier": "hansjhoffman.elm",
  "name": "Elm",
  "author": "Hans Hoffman",
  "organization": "@hansjhoffman",
  "description": "Elm syntax highlighting, code completions and Language Server support.",
  "version": "0.2.0",
  "categories": ["languages"],
  "license": "MIT",
  "repository": "https://github.com/hansjhoffman/nova-elm",
  "bugs": {
    "url": "https://github.com/hansjhoffman/nova-elm/issues"
  },

  "main": "main.dist.js",
  "activationEvents": ["onLanguage:elm", "onWorkspaceContains:elm.json"],
  "entitlements": {
    "process": true
  },
  "commands": {
    "editor": [
      {
        "title": "Format Elm",
        "command": "elm.format",
        "shortcut": "opt-shift-f",
        "when": "editorHasFocus",
        "filters": {
          "syntaxes": ["elm"]
        }
      }
    ]
  },
  "configWorkspace": [
    {
      "key": "hansjhoffman.elm.elmFormatPath",
      "title": "elm-format Path",
      "type": "path",
      "default": "",
      "description": "Path to this workspace's elm-format executable"
    },
    {
      "key": "hansjhoffman.elm.formatOnSave",
      "title": "Format on Save",
      "type": "boolean",
      "default": false
    }
  ]
}
